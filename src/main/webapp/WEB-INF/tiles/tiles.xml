<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE tiles-definitions PUBLIC
           "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
           "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
    <tiles-definitions>

        <!-- Templates -->

        <definition name="layout.basic" template="/WEB-INF/tiles/layout/basic.jsp">
            <put-attribute name="header" value="/WEB-INF/views/header/header.jsp" />
            <put-attribute name="body" value="" />
        </definition>

        <!-- Pages -->
	    <definition name="kongfood/*" extends="default">
	        <put-attribute name="body" value="/WEB-INF/views/kongfood/{1}.jsp" />
	    </definition>
	
	    <definition name="*/*/*" extends="default">
	        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
	    </definition>  
        
    </tiles-definitions>